@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center py-5">
    <div class="bg-white rounded-3 shadow-sm p-5 mx-auto" style="max-width: 600px;">
        <i class="bi bi-x-circle display-1 text-danger mb-4"></i>
        <h1 class="fw-bold text-danger mb-3">Oops! Something went wrong</h1>
        <h2 class="text-danger mb-4">An error occurred while processing your request.</h2>

        @if (Model != null && Model.ShowRequestId)
        {
            <div class="alert alert-info">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </div>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door"></i> Return to Home
            </a>
        </div>
    </div>
</div>
