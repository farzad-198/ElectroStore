@model Product

<div class="card h-100 shadow-sm border-0 product-card">
    <div class="position-relative overflow-hidden">
        <img src="@Model.ImageUrl" class="card-img-top p-3" alt="@Model.Name" style="height: 220px; object-fit: contain; transition: transform 0.3s;" />
        @if (Model.IsNew)
        {
            <span class="badge bg-success position-absolute top-0 end-0 m-2">
                <i class="bi bi-star-fill"></i> New
            </span>
        }
        @if (Model.OldPrice.HasValue && Model.OldPrice > Model.Price)
        {
            <span class="badge bg-danger position-absolute top-0 start-0 m-2">
                @((int)((1 - Model.Price / Model.OldPrice.Value) * 100))% OFF
            </span>
        }
    </div>
    <div class="card-body d-flex flex-column p-3">
        <div class="mb-2">
            <span class="badge bg-light text-dark small">@Model.Category?.Name</span>
        </div>
        <h6 class="fw-bold mb-2 card-title" style="min-height: 40px;">@Model.Name</h6>
        
        @if (Model.Rating > 0)
        {
            <div class="mb-2">
                @for (int i = 0; i < 5; i++)
                {
                    <i class="bi @(i < Model.Rating ? "bi-star-fill text-warning" : "bi-star text-muted")" style="font-size: 0.8rem;"></i>
                }
            </div>
        }

        <div class="mb-3">
            @if (Model.OldPrice.HasValue && Model.OldPrice > Model.Price)
            {
                <div>
                    <span class="fw-bold text-primary fs-5">$@Model.Price.ToString("N0")</span>
                    <span class="text-decoration-line-through text-muted small ms-2">$@Model.OldPrice.Value.ToString("N0")</span>
                </div>
            }
            else
            {
                <span class="fw-bold text-primary fs-5">$@Model.Price.ToString("N0")</span>
            }
        </div>

        <div class="mt-auto d-flex gap-2">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-outline-primary flex-grow-1">
                <i class="bi bi-eye"></i> View
            </a>
            <form asp-controller="Cart" asp-action="Add" method="post" class="flex-grow-1">
                <input type="hidden" name="productId" value="@Model.Id" />
                <input type="hidden" name="quantity" value="1" />
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-cart-plus"></i>
                </button>
            </form>
        </div>
    </div>
</div>
