@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">
        <i class="bi bi-speedometer2 text-primary"></i> Dashboard
    </h2>
    <span class="text-muted">@DateTime.Now.ToString("MMMM dd, yyyy")</span>
</div>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Total Products</h6>
                <h3 class="fw-bold">@ViewBag.TotalProducts</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Total Orders</h6>
                <h3 class="fw-bold">@ViewBag.TotalOrders</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Total Users</h6>
                <h3 class="fw-bold">@ViewBag.TotalUsers</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Revenue</h6>
                <h3 class="fw-bold">$@ViewBag.Revenue</h3>
            </div>
        </div>
    </div>
</div>
