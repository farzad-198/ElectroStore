@model List<ElectroStore.Models.Product>

@{
    ViewData["Title"] = "Products Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">
        <i class="bi bi-box-seam text-primary"></i> Products Management
    </h2>
    <a asp-action="ProductCreate" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
  

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No products found
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td>
                                    <img src="@p.ImageUrl" width="50" />
                                </td>
                                <td>@p.Name</td>
                                <td>@p.Category?.Name</td>
                                <td>$@p.Price</td>
                                <td>
                                    @(p.IsNew ? "New" : "Regular")
                                </td>
                                <td>
                                    <a asp-action="ProductEdit"
                                       asp-route-id="@p.Id"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        Edit
                                    </a>

                                    <form asp-action="ProductDelete"
                                          asp-route-id="@p.Id"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Delete this product?');">
                                        <button class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
