@model ElectroStore.Models.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Product</h2>

<form asp-action="ProductEdit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Old Price</label>
        <input asp-for="OldPrice" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label>Rating</label>
        <input asp-for="Rating" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Is New?</label>
        <select asp-for="IsNew" class="form-select">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <label>Current Image</label><br />
            <img src="@Model.ImageUrl" style="width:120px" />
        </div>
    }

    <div class="mb-3">
        <label>Change Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-action="Products" class="btn btn-secondary">Cancel</a>
</form>
