@model ElectroStore.Models.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">
        <i class="bi bi-receipt text-primary"></i>
        Order Details #@Model.Id
    </h2>
    <a asp-action="Orders" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Orders
    </a>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="fw-bold mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <strong>User ID:</strong> @Model.UserId
                </p>
                <p class="mb-2">
                    <strong>Order Date:</strong>
                    @Model.Date.ToString("yyyy-MM-dd HH:mm")
                </p>
                <p class="mb-0">
                    <strong>Total:</strong> $@Model.Total
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="fw-bold mb-0">Summary</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <span class="fw-bold fs-5">Total</span>
                    <span class="fw-bold text-primary fs-4">$@Model.Total</span>
                </div>
            </div>
        </div>
    </div>
</div>
