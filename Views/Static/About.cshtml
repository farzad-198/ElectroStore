@{
    ViewData["Title"] = "About Us";
}

<div class="bg-white rounded-3 shadow-sm p-5">
    <div class="text-center mb-5">
        <i class="bi bi-info-circle display-1 text-primary"></i>
        <h1 class="fw-bold mt-3">About ElectroStore</h1>
        <p class="lead text-muted">Your trusted destination for electronics</p>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="p-4 bg-light rounded-3 h-100">
                <i class="bi bi-lightning-charge-fill display-4 text-primary mb-3"></i>
                <h4 class="fw-bold mb-3">Our Mission</h4>
                <p class="text-muted">
                    ElectroStore was founded with a simple mission: to deliver the best electronics 
                    with trusted warranty and fast delivery. We believe everyone deserves access to 
                    quality technology at affordable prices.
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="p-4 bg-light rounded-3 h-100">
                <i class="bi bi-star-fill display-4 text-warning mb-3"></i>
                <h4 class="fw-bold mb-3">Why Choose Us</h4>
                <ul class="list-unstyled text-muted">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Quality guaranteed products</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Fast and reliable shipping</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Excellent customer support</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Competitive prices</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="text-center">
        <h3 class="fw-bold mb-4">Our Values</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <i class="bi bi-shield-check display-4 text-success mb-3"></i>
                <h5 class="fw-bold">Trust</h5>
                <p class="text-muted">We build trust through transparency and reliability</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-heart-fill display-4 text-danger mb-3"></i>
                <h5 class="fw-bold">Customer First</h5>
                <p class="text-muted">Your satisfaction is our top priority</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-graph-up-arrow display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">Innovation</h5>
                <p class="text-muted">Always improving and evolving</p>
            </div>
        </div>
    </div>
</div>

