@model Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">
        <i class="bi bi-receipt text-primary"></i> Order #@Model.Id
    </h2>
    <a asp-action="Orders" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Orders
    </a>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="bg-white rounded-3 shadow-sm p-4 mb-4">
            <h5 class="fw-bold mb-4">Order Items</h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Product Name</td>
                            <td>1</td>
                            <td>$0</td>
                            <td>$0</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-white rounded-3 shadow-sm p-4">
            <h5 class="fw-bold mb-4">Shipping Information</h5>
            <p class="text-muted mb-0">Shipping details will be displayed here</p>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="bg-white rounded-3 shadow-sm p-4 sticky-top" style="top: 100px;">
            <h5 class="fw-bold mb-4">Order Summary</h5>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Subtotal</span>
                <span class="fw-semibold">$@Model.Total.ToString("N0")</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Shipping</span>
                <span class="fw-semibold text-success">Free</span>
            </div>
            <hr />
            <div class="d-flex justify-content-between mb-4">
                <span class="fw-bold fs-5">Total</span>
                <span class="fw-bold text-primary fs-4">$@Model.Total.ToString("N0")</span>
            </div>
            <div class="mb-3">
                <p class="small text-muted mb-1">Order Date</p>
                <p class="fw-semibold">@Model.Date.ToString("MMMM dd, yyyy")</p>
            </div>
            <div>
                <p class="small text-muted mb-1">Status</p>
                <span class="badge bg-success">Completed</span>
            </div>
        </div>
    </div>
</div>